set background=dark

set pastetoggle=<F9>

" indentation
set autoindent
set smartindent
set wrap
set expandtab
set smarttab
set shiftwidth=4
set softtabstop=4

" application stuff
set showcmd
set wildmenu
set wildmode=list:longest,full

" search options
set ignorecase
set smartcase
set incsearch

"set backspace=eol,start,indent
"set whichwrap+=<,>,h,l
set nostartofline
set confirm
